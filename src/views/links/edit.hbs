<div class="container mt-4">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form action="/edit/{{links.id}}" method="POST">
                        <div class="form-group">
                            <label for="id">ID</label>
                            <input type="text"  value="{{links.id}}" class="form-control" name="id" placeholder="ID" readonly>
                        </div>
                        <div class="form-group">
                            <label for="name">Nombre</label>
                            <input type="text"  value="{{links.name}}" class="form-control" name="name" placeholder="Nombre" autofocus>
                        </div>
                        <div class="form-group">
                            <label for="salary">Salario</label>
                            <input type="number" value="{{links.salary}}" class="form-control" name="salary" placeholder="Salario">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Salvar
                            </button>

                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>